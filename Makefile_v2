SERVER = server
CLIENT = client

CC = gcc
FLAGS = -Wall -Wextra -Werror -I$(PRINTF) -L$(PRINTF) -llibft

LIBFT = libft

all:
	@make -s -C $(LIBFT)
	@gcc $(FLAGS) ft_server.c -o $(SERVER)
	@gcc $(FLAGS) ft_client.c -o $(CLIENT)
	@echo "Server And Client Are Ready!"

clean:
	@make clean -s -C $(LIBFT)

fclean: clean
	@make fclean -s -C $(LIBFT)
	@rm -f $(SERVER) $(CLIENT)
	@echo "Server and Client Have Been Cleaned Successfully"

re: fclean all

.PHONY: all clean fclean re
